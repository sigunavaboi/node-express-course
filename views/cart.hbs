<h1>Cart</h1>
<div id="cart">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn btn-small js-remove" data-id="{{id}}">Remove</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong>Price: </strong><span class="price">{{price}}</span></p>
  {{else}}
  <p>Empty Cart</p>
  {{/if}}
</div>