
<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Sign in</a></li>
        <li class="tab col s6"><a class="active" href="#register">Sign up</a></li>    </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if error}}
        <p class="alert">{{error}}</p>
      {{/if}}
      <h1>Sign in to shop</h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input id="aemail" name="email" type="email" class="validate" required>
          <label for="aemail">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="apassword" name="password" type="password" class="validate" required min="1">
          <label for="apassword">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if error}}
        <p class="alert">{{error}}</p>
      {{/if}}
      <h1>Sign up to shop</h1>
      <form action="/auth/register" method="POST" novalidate>
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate">
          <label for="name">Name</label>
          <span class="helper-text"></span>
        </div>

        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required min="1">
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required min="1">
          <label for="confirm">Password again</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Sign up</button>
      </form>
    </div>
  </div>
</div>